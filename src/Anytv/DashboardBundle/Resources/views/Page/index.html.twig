{% extends 'AnytvDashboardBundle::layout.html.twig' %}

{% block title %}{{ parent() }} - {{ title}}{% endblock %}
     
{% block content_header '' %}

{% block content %}
    {% set version = constant('Symfony\\Component\\HttpKernel\\Kernel::MAJOR_VERSION') ~ '.' ~ constant('Symfony\\Component\\HttpKernel\\Kernel::MINOR_VERSION')%}

<div id="content">
  <div id="dboard-wrap">   
    <section class="sec-content-title">
      <div class="container">
        <div style="float: left;"><h3>{{ title|upper }}</h3></div>
	<div style="float: right;">&nbsp;</div>
      </div>
    </section>
      
    <section class="db-slide-1">
      <div class="container">
        <div class="row">
    
      <div class="cl-20"></div>
	  <hr>
          <div class="table-responsive">
	    <div class="offer-tbl-wrap">
    

    
      <table class="table table-striped">                                                                        
                <thead>
        <tr>
         <th>{% trans %}Title{% endtrans %}</th>
       </tr>
       </thead>
                <tbody>
       {% for page in pages %}
         <tr>
           <td><a href="{{ path('page_edit', { 'id' : page.id }) }}" title="{% trans %}Edit{% endtrans %}">{{ page.title }}</a></td>
         </tr>
       {% endfor %} 
         
         </tbody>
         
         
      </table>
       
      
          
     </div>
						</div>
					</div>
				</div>

			</section>

		</div>
	</div>

    {{ parent() }}
    
        
    
{% endblock %}