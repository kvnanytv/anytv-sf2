{% extends 'AnytvDashboardBundle::layout.html.twig' %}

{% block title %}{{ parent() }} - {{ title}}{% endblock %}
     
{% block content_header '' %}

{% block content %}
    {% set version = constant('Symfony\\Component\\HttpKernel\\Kernel::MAJOR_VERSION') ~ '.' ~ constant('Symfony\\Component\\HttpKernel\\Kernel::MINOR_VERSION')%}

<div id="content">
  <div id="dboard-wrap">   
    <section class="sec-content-title">
      <div class="container">
        <div style="float: left;"><h3>{{ faq.question }}</h3></div>
	<div style="float: right;">&nbsp;</div>
      </div>
    </section>
      
    <section class="db-slide-1">
      <div class="container">
        <div class="row">

   
       
       {{ form_start(form, {'action': path('faq_edit', { 'id' : faq.id }), 'method': 'POST'}) }}
          
         {{ form_errors(form) }}
        
         {{ form_row(form.question, {'attr': {'class': 'form-control input-lg'}}) }}
         <div class="cl-20"></div>
         {{ form_row(form.answer, {'attr': {'class': 'form-control input-lg'}}) }}
         <div class="cl-20"></div>
         {{ form_row(form.questionZh, {'attr': {'class': 'form-control input-lg'}}) }}
         <div class="cl-20"></div>
         {{ form_row(form.answerZh, {'attr': {'class': 'form-control input-lg'}}) }}
         <div class="cl-20"></div>
         {{ form_row(form.questionNl, {'attr': {'class': 'form-control input-lg'}}) }}
         <div class="cl-20"></div>
         {{ form_row(form.answerNl, {'attr': {'class': 'form-control input-lg'}}) }}
         <div class="cl-20"></div>
         {{ form_row(form.questionDe, {'attr': {'class': 'form-control input-lg'}}) }}
         <div class="cl-20"></div>
         {{ form_row(form.answerDe, {'attr': {'class': 'form-control input-lg'}}) }}
         <div class="cl-20"></div>
         {{ form_row(form.isActive, {'attr': {'class': 'selectpicker'}}) }}
         <div class="cl-20"></div>
         {{ form_row(form.isVisibleEn, {'attr': {'class': 'selectpicker'}}) }}
         <div class="cl-20"></div>
         {{ form_row(form.isVisibleZh, {'attr': {'class': 'selectpicker'}}) }}
         <div class="cl-20"></div>
         {{ form_row(form.isVisibleNl, {'attr': {'class': 'selectpicker'}}) }}
         <div class="cl-20"></div>
         {{ form_row(form.isVisibleDe, {'attr': {'class': 'selectpicker'}}) }}
         <div class="cl-20"></div>
         {{ form_row(form.categories, {'attr': {'class': 'selectpicker'}}) }}
         <div class="cl-20"></div>
      {{ form_row(form.save, {'attr': {'class': 'btn btn-default btn-lg'}}) }}
       
       {{ form_end(form) }}
      </div>
				</div>

			</section>

		</div>
	</div>

    {{ parent() }}
    
        
    
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <script type="text/javascript">
    $(window).on('load', function () {

        $('.selectpicker').selectpicker({
            'selectedText': ''
        });

    });
</script>
{% endblock %}