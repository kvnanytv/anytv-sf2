{% extends 'AnytvDashboardBundle::layout.html.twig' %}

{% block title %}{{ parent() }} - {{ title}}{% endblock %}
     
{% block content_header '' %}

{% block content %}
    {% set version = constant('Symfony\\Component\\HttpKernel\\Kernel::MAJOR_VERSION') ~ '.' ~ constant('Symfony\\Component\\HttpKernel\\Kernel::MINOR_VERSION')%}

<div id="content">
  <div id="dboard-wrap">   
    <section class="sec-content-title">
      <div class="container">
        <div style="float: left;"><h3>{{ title }}</h3></div>
	<div style="float: right;">&nbsp;</div>
      </div>
    </section>
      
    <section class="db-slide-1">
      <div class="container">
        <div class="row">
            
            <div class="cl-20"></div>                                                                     
      <hr>
      
      <div id="user-prof-name">
        <label>{% trans %}Email{% endtrans %}</label>
	<input type="text" class="form-control input-lg" value="{{ affiliate_user.email }}" disabled>
        <div class="cl-20"></div>
        <label>{% trans %}Affiliate{% endtrans %}</label>
	<a href="{{ path('affiliate_view', { 'id' : affiliate.getId() }) }}" title="{{ affiliate.company }}">{{ affiliate.company }}</a>
        <div class="cl-20"></div>
        <label>{% trans %}Phone{% endtrans %}</label>
	<input type="text" class="form-control input-lg" value="{{ affiliate_user.phone }}" disabled>
        <div class="cl-20"></div>
        <label>{% trans %}Mobile{% endtrans %}</label>
	<input type="text" class="form-control input-lg" value="{{ affiliate_user.cellPhone }}" disabled>
        <div class="cl-20"></div>
        <label>{% trans %}Date Joined{% endtrans %}</label>
	<input type="text" class="form-control input-lg" value="{{ affiliate_user.getDateJoinedAsString() }}" disabled>
        
      </div>
    
    
      
            
    
   
      
      
      
        
      
      <div class="cl-20"></div>
      </div>
      
		</div>

			</section>

		</div>
	</div>

    {{ parent() }}
    
        
    
{% endblock %}
