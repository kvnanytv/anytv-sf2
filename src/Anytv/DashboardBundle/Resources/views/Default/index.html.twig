{% extends 'AnytvDashboardBundle::layout.html.twig' %}

{% block title %}{{ parent() }} - {% trans %}Home{% endtrans %}{% endblock %}
     
{% block content_header '' %}

{% block content %}
    {% set version = constant('Symfony\\Component\\HttpKernel\\Kernel::MAJOR_VERSION') ~ '.' ~ constant('Symfony\\Component\\HttpKernel\\Kernel::MINOR_VERSION')%}

<section id="content">
  <div class="container">
    <div class="row">
      <div class="col-lg-3">
        {{ render(controller('AnytvDashboardBundle:Profile:idCard', {'affiliate': affiliate, 'affiliate_user': affiliate_user, 'page':'home'})) }}
      <div class="cl-20"></div>
      </div>
      <div class="col-lg-9">
        {{ render(controller('AnytvDashboardBundle:Profile:tabbedComponent', {'affiliate': affiliate, 'affiliate_user': affiliate_user})) }}		
      </div> 
    </div>
  </div>
</section>
    

{{ parent() }}

{% endblock %}


{% block javascripts %}
  {{ parent() }}
  <script type="text/javascript">
    $(document).ready(
      function()
      {
        showTab('{{ path('profile_browse_offers') }}');     
      }
    );
  </script>
{% endblock %}
