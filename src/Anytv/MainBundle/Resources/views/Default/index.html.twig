{% extends 'AnytvMainBundle::layout.html.twig' %}

{% block title %}{{ parent() }} - {% trans %}Home{% endtrans %}{% endblock %}
     
{% block content_header '' %}

{% block content %}
    {% set version = constant('Symfony\\Component\\HttpKernel\\Kernel::MAJOR_VERSION') ~ '.' ~ constant('Symfony\\Component\\HttpKernel\\Kernel::MINOR_VERSION')%}
    
    <div id="content">
    <section class="banner">
        <div class="container">
          <div class="container-fluid">
            <div class="row-fluid">
          		<div class="cta-home">
                <div class="col-lg-5">
            			<h3>{% trans %}A new kind of YouTube Network{% endtrans %}</h3>
            			<p>{% trans %}Don’t unpartner from your YouTube Network{% endtrans %}</p>
                                {% if(app.user == false) %}
                                  <p><a href="{{ path('signup') }}" class="btn btn-primary btn-lg btn-join">{% trans %}Join any.TV{% endtrans %}</a></p>
                                {% endif %}
                  
                </div>
                <div class="col-lg-7">
                  <div class="video-container">
                    {% if(app.request.get('_locale') == 'zh') %}
                      <iframe width="560" height="315" src="http://www.youtube.com/embed/cKwRYDu2Uic?list=PLvn_mUScn81D6-lz_CdrfCEfnT8y89USd" frameborder="0"></iframe>		
                    {% else %}
                      <iframe width="560" height="315" src="http://www.youtube.com/embed/UCqJAZuvUS0?wmode=transparent" frameborder="0"></iframe>	
                    {% endif %}
                  </div>
                </div>
          		</div>
            </div>
          </div>          
        </div>       
    	</section>
            
           
    	
     
     <div id="gameslist-block">
       {{ render(controller('AnytvDashboardBundle:Offer:embed', {'page': 1})) }}
     </div>
            
            {{ render(controller('AnytvDashboardBundle:Profile:offerViewPopup')) }}
      
            <section id="networks">
			<div class="container">	
				<div class="row-fluid"> 
                                    <div class="col-lg-12">
						<div class="net-title">
							
						</div>
					</div>
				<div class="col-lg-4">
					<div id="net-col">					
						<h4>{% trans %}George is Back!{% endtrans %}</h4>
						<p>{% trans %}As promised.{% endtrans %}</p>
                <p>{% trans %}I am the ex-President and founder of TGN, my old company that I sold to BroadbandTV in 2012. It was time for something new.{% endtrans %}</p>
                <p>{% trans %}Will you <b>help me</b> build any.TV together?{% endtrans %}</p>
                <a href="{{ path('staff') }}" class="btn btn-default">{% trans %}Help George{% endtrans %}</a> 

					</div>					
				</div>
				<div class="col-lg-4">
					<div id="net-col">
						<h4>{% trans %}Do Not Unpartner!{% endtrans %}</h4>
                <p>{% trans %}Really.{% endtrans %}</p>
                <p>{% trans %}You do not need to unpartner from your current Network to join any.TV.{% endtrans %}</p>
                <p>{% trans %}Why?{% endtrans %}</p>
                <p>{% trans %}Because we <b>don’t</b> partner channels.{% endtrans %}</p>
                {% if(app.user == false) %}
                  {% if(app.session.get('referral_id')) %}
                    <a href="{{ path('signup', { 'id': app.session.get('referral_id') }) }}" class="btn btn-default">{% trans %}Join any.TV{% endtrans %}</a>
                  {% else %}
                    <a href="{{ path('signup') }}" class="btn btn-default">{% trans %}Join any.TV{% endtrans %}</a>
                  {% endif %}  
                {% endif %}
					</div>	
				</div>
				<div class="col-lg-4">
					<div id="net-col">
						<h4>{% trans %}10% Lifetime Bonus!{% endtrans %}</h4>
                <p>{% trans %}Yes, we mean forever.{% endtrans %}</p>
                <p>{% trans %}any.TV pays you a 10% bonus of everything your referrals make, our way of saying “Thank You” for recommending any.TV to your friends and partners!{% endtrans %}</p>
                <p>{% trans %}This is <b>not</b> a pyramid scheme.{% endtrans %}</p>
                <a href="http://www.youtube.com/watch?v=Hs1Tq_Mi_Yg&list=PLyI74zGGymu8k7eVhGPcVSh3nKljHfiVX" target="_blank" class="btn btn-default">{% trans %}Learn More{% endtrans %}</a>
					</div>	
				</div>
			</div>
		</div>
	</section>
            
            
      	

	<section id="our-partners">
		<div class="container">
			<div class="op-title">
				
			</div>
		</div>
	</section>      

      {{ parent() }}
        </div>
    
{% endblock %}
     
{% block javascripts %}
  {{ parent() }}
  <script src="{{ asset('bundles/anytvdashboard/js/offers.js') }}"></script>
{% endblock %}


